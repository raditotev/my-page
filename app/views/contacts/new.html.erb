<% provide(:id, "contact") %>

<div class="row" id="contact-page">
  <div class="small-10 small-centered medium-8 medium-centered">
    <h3 class="text-center">Contact</h3>
    <%= form_for(@contact, remote: true) do |f| %>
    <% if @contact.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :message %><br>
      <%= f.text_area :message %>
    </div>
    <div class="field">
      <div class= "hidden">
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Send", class: "button", id: "send_message" %>
    </div>
    <% end %>
  </div>
</div>

