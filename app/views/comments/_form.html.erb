<%= simple_form_for([@post, @post.comments.new], remote: true) do |f| %>

  <%= f.input :author, placeholder: "Your name (optional)" %>
  <%= f.input :email, placeholder: "Your email (optional/ not public)" %>
  <%= f.input :content, placeholder: "Your comment...", as: :text, input_html: {rows: 4} %>

  <%= f.button :submit,  "Comment", disabled: "true", id: "create-comment" %>

<% end %>
