<%= form_for([@post, @post.comments.new], remote: true) do |f| %>
  <div class="field">
    <%= f.label :author %><br>
    <%= f.text_field :author, id: "form-comment-author" %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email, id: "form-comment-email" %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, id:"form-comment-content" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
