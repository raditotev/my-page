<h1 class="text-center">Blog</h1>

<div class="row">
  <% @posts.each do |post| %>
  <div class="small-10 small-centered medium-6 medium-centered">
    <h3><%= post.title %></h3>
    <div class="row">
      <div class="small-12 medium-4 columns">
      <p><%= post.created_at.strftime("%e %B, %Y") %></p>
     </div>
     <div class="small-12 medium-8 columns">
      <p><%= raw tag_links(post.all_tags) %></p>
    </div>
  </div>
</div>
<% end %>
</div>
