<div id="show-post">
  <div class="row">
    <div class="small-8 small-centered">
    <div class="text-center" id="post-header">
      <h1><%= @post.title %></h1>
      <p><%= @post.created_at.strftime("%e %B, %Y") %></p>
    </div>
      <div id="post-content">
        <%= @post.content.html_safe %>
      </div>
      <p>
        <strong>Tags</strong> <br>
        <%= raw tag_links(@post.all_tags) %>
      </p>
      <div id="comments_form">
        <h5>Comments</h5>
        <hr>
        <%= render 'comments/form' %>
      </div>
      <div id="comments">
        <%= render @comments %>
      </div>
    </div>
  </div>
</div>
