<% provide(:title, "Projects") %>

<div id="projects">
  <% @projects.each do |project| %>
  <div class="row">
    <div class="col-xs-8">
      <h3><%= link_to project.title, project %></h3>
    </div>
    <div class="col-xs-4 controls">
      <%= link_to fa_icon("eye 2x"), project, target: "_blank", title: "Show" %>
      <%= link_to fa_icon("pencil 2x"), edit_project_path(project), title: "Edit" %>
      <%= link_to fa_icon("trash 2x"), project, title: "Delete", method: :delete, data: { confirm: "Are you sure?" } %>
    </div>
  </div>
  <% end %>
</div>
