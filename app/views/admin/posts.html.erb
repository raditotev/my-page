<% @posts.each do |post| %>
<div class="row">
  <div class="small-8 columns">
    <h4><%= post.title %></h4>
  </div>
  <div class="small-4 columns">
    <%= link_to "Show", post, target: "_blank" %>
    <%= link_to "Edit", edit_post_path(post), target: "_blank" %>
    <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?" } %>
  </div>
</div>
<% end %>
